<header class="header" data-role="header">
  <div class="logo"><h1>Disc Golf<br>Scorecard</h1></div>
</header>

<div class="creategame" data-role="main">
  <div class="loginsignup">
  <% if current_user %>
    <ul data-role="listview">
      <li class="signedin">
        You are signed in as <%= current_user.username %>.
      </li>
      <li><%= link_to "Create New Game", games_path %></li>
      <!--  "My Scores", games_score_path -->
      <!-- post_comments_path(@comment.post) -->
      <li><%= link_to "Log Out", log_out_path, method: :delete %></li>
    <% else %>
      <h4>Welcome to Disc Golf Scorecard!</h4>
      <p>To keep score of your game</p>
      <ul data-role="listview">
        <li><%= link_to "Log In", log_in_path %></li>
      </ul>
      <ul data-role="listview">
      <p>To create an account</p>
        <li><%= link_to "Sign Up", users_new_path %></li>
      </ul>
  </div>
  <% end %>
</div>

<div class="footer" data-role="footer" data-position="fixed"><p>Disc Golf Scorecard &#169;</p></div>
